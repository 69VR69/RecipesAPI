generator client {
  provider = "prisma-client-js"
}

generator joi {
  provider = "prisma-joi-generator"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Recipe {
  id         Int                @id @default(autoincrement())
  name       String
  ingredient RecipeIngredient[]
  step Step[]
}

model Ingredient {
  id       Int                @id @default(autoincrement())
  name     String
  category String
  season   Int
  recipe   RecipeIngredient[]
  step   StepIngredient[]
  seasonRelation Season @relation(fields: [season], references: [id])
}

model Step {
  id Int @id @default(autoincrement())
  description String 
  recipeId Int
  recipe Recipe @relation(fields: [recipeId], references: [id])

  ingredient StepIngredient[]
}

model Season{
  id Int @id @default(autoincrement())
  label String 
  ingredient Ingredient[]
}


model RecipeIngredient {
  ingredient         Int
  recipe             Int
  number             Int
  reciepRelation     Recipe     @relation(fields: [recipe], references: [id])
  ingredientRelation Ingredient @relation(fields: [ingredient], references: [id])

  @@id([ingredient, recipe])
}


model StepIngredient {
  ingredient         Int
  step             Int
  number             Int
  stepRelation     Step     @relation(fields: [step], references: [id])
  ingredientRelation Ingredient @relation(fields: [ingredient], references: [id])

  @@id([ingredient, step])
}
