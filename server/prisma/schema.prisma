// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Testing schema only, to be replaced with real schema
model Recipe {
  id        Int      @id @default(autoincrement())
  name     String
  ingredient RecipeIngredients[]
}

model Ingredient {
  id        Int      @id @default(autoincrement())
  name      String
  category  String
  season    Int
  reciep RecipeIngredients[]
}

model RecipeIngredients{
  ingredient Int
  reciep Int
  number Int 

  @@id([ingredient,reciep])
  ingredientRelation Ingredient @relation(fields: [ingredient],references: [id] )
  reciepRelation Recipe @relation(fields: [reciep],references: [id] )
}


