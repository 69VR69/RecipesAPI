generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Testing schema only, to be replaced with real schema
model Recipe {
  id        Int      @id @default(autoincrement())
  name     String
  ingredients Ingredient[]
}

model Ingredient {
  id        Int      @id @default(autoincrement())
  name     String
  recipe   Recipe[]
}