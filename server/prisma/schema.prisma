generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["metrics"]
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Recipe {
  id         Int                @id @default(autoincrement())
  name       String
  ingredient RecipeIngredient[]
  step       Step[]
}

model Ingredient {
  id             Int                @id @default(autoincrement())
  name           String
  category       String
  season         Int
  seasonRelation Season             @relation(fields: [season], references: [id])
  recipe         RecipeIngredient[]
  step           StepIngredient[]
}

model Step {
  id          Int              @id @default(autoincrement())
  description String
  recipeId    Int
  recipe      Recipe           @relation(fields: [recipeId], references: [id])
  ingredient  StepIngredient[]
}

model Season {
  id         Int          @id @default(autoincrement())
  label      String
  ingredient Ingredient[]
}

model RecipeIngredient {
  ingredient         Int
  recipe             Int
  number             Int
  recipeRelation     Recipe     @relation(fields: [recipe], references: [id])
  ingredientRelation Ingredient @relation(fields: [ingredient], references: [id])

  @@id([ingredient, recipe])
}

model StepIngredient {
  ingredient         Int
  step               Int
  number             Int
  stepRelation       Step       @relation(fields: [step], references: [id])
  ingredientRelation Ingredient @relation(fields: [ingredient], references: [id])

  @@id([ingredient, step])
}
